{
  "name": "ts-lib-ui-kit",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "packageManager": "yarn@4.1.0",
  "files": [
    "dist/src/**/*.js",
    "dist/src/**/*.d.ts",
    "dist/src/**/*.d.ts.map"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "build": "tsc",
    "clean": "tsc -b --clean",
    "check": "tsc --noEmit",
    "postinstall": "husky"
  },
  "prettier": {
    "printWidth": 120,
    "useTabs": true,
    "bracketSpacing": false,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "testMatch": [
      "**/test/**/*.(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "coverage",
      "node_modules",
      "test/",
      "dist/"
    ],
    "coverageReporters": [
      [
        "lcov",
        {
          "projectRoot": "."
        }
      ],
      "text"
    ],
    "testPathIgnorePatterns": [
      "(/?.)*.js",
      "/node_modules/",
      "/dist/"
    ]
  },
  "lint-staged": {
    "*.{yml,json,ts,js,md,yaml,html}": "prettier --write"
  }
}
